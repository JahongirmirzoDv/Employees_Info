<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg"
    android:layout_gravity="bottom"
    android:clickable="true"
    android:focusable="true"
    android:gravity="bottom">

    <RelativeLayout
        android:id="@+id/face_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/person_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_deletion_icon"/>

    </RelativeLayout>

<TextView
    android:id="@+id/not_found_txt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Xodim aniqlanmadi!"
    android:textSize="17sp"
    android:textStyle="bold"
    android:fontFamily="@font/montserrat"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginTop="20dp"
    android:textColor="@color/black"
    android:layout_below="@+id/face_id"/>

    <TextView
        android:id="@+id/not_found_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Iltimos yana bir bor urinib koâ€™ring"
        android:textSize="15sp"
        android:fontFamily="@font/montserrat"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_below="@+id/not_found_txt"/>

    <Button
        android:id="@+id/sell_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="32dp"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@id/not_found_txt2"
        android:text="@string/ok"
        android:textColor="?attr/customButtonTextColor"
        android:background="@drawable/login_rounded" />


</RelativeLayout>