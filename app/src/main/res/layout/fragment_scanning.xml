<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ScanningFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tooolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:navigationIcon="@drawable/ic_exit"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/face"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"/>

    <TextView
        android:id="@+id/face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kameraga qarang:"
        android:layout_marginTop="16dp"
        android:textColor="@color/newTextColor"
        android:textSize="20sp"
        android:layout_marginStart="40dp"/>

    <TextView
        android:id="@+id/fingerprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barmogâ€™ingizni bosing:"
        android:layout_marginTop="16dp"
        android:textColor="@color/newTextColor"
        android:textSize="20sp"
        android:layout_marginStart="40dp"/>

    <TextView
        android:id="@+id/qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mahsus cardni kameraga tuting:"
        android:layout_marginTop="16dp"
        android:textColor="@color/newTextColor"
        android:textSize="20sp"
        android:layout_marginStart="40dp"/>
</LinearLayout>